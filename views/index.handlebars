<div class="container" style="margin-top: 100px">
    <div class="col-md-12 jumbotron bg-danger text-white">
        <div class="text-center">
            <h1> NY Times News Scraper</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card" style="margin-bottom: 20px;">
                <div class="card-header">
                    <h4>{{this.headline}}</h4>
                </div>
                <div class="card-body">
                    <p> {{this.summary}}</p>
                    <a href="https://www.nytimes.com/section/world{{this.link}}" target="_blank">https://www.nytimes.com/section/world{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-info save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
            <h4>No articles at the moment. Click the scrape button to scrape new articles!</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>